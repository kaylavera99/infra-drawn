{
  "name": "infra-drawn",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "dev:web": "npm --prefix apps/web run dev",
    "build:web": "npm --prefix apps/web run build",
    "dev:api": "npm --prefix services/api run dev",
    "build:api": "npm --prefix services/api run build",
    "build": "npm run build:web && npm run build:api"
  },
  "engines": {
    "node": ">=18.18"
  },
  "devDependencies": {
    "vite-plugin-svgr": "^4.5.0"
  }
}
